          <h1>httpclout</h1>
          <h2><a href="https://github.com/andrewarrow/httpclout">https://github.com/andrewarrow/httpclout</a></h2>

          <div>
                  <h2><a href="#" onclick="window.addEventListener('message', handleMessage); window.open('https://identity.bitclout.com/log-in', null, 'toolbar=no, width=800, height=1000, top=0, left=0')">Log In</a></h2>
          </div>

<script>
function handleMessage(e) {
  console.log(e);
  if e.data.method == "initialize" {
    var thing = Object();
    thing.id = e.data.id;
    thing.service = "identity";
    thing.payload = Object();
    e.source.postMessage(thing, "*");
  } else if e.data.method == "login" {
    var pub58 = e.data.payload.publicKeyAdded;
    console.log(pub58);
  }
}
</script>
